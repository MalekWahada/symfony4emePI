        $(document).ready(function () {


            $("#example tbody tr").click(function () {
                var tableData=  $(this).children("td").map(function () {
                    return $(this).text();
                }).get() ;
                var  td="nom de l'auteur: "+tableData[0]+"   contact:   "+tableData[3];
                alert(td);
            });});


    </script>





